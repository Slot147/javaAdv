<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.iexcept.ijavaadv</groupId>
  <artifactId>hello-world</artifactId>
  <version>1.0</version>
  
  <properties>
    <exec.mainClass>
	  org.iexcept.ijavaadv.helloworld.Main
    </exec.mainClass>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.5.0</version>
        <configuration>
          <mainClass>
            org.iexcept.ijavaadv.helloworld.Main
          </mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.17</version>
    </dependency>
  </dependencies>

</project>